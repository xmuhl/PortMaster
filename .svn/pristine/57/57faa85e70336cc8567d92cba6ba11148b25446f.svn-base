void CPortMasterDlg::OnBnClickedSend()
{
	std::vector<uint8_t> dataToSend = GetInputData();
	
	if (dataToSend.empty())
	{
		AppendLog(L"没有数据可发送");
		return;
	}
	
	// 显示发送的数据
	DisplayReceivedData(dataToSend);
	
	// 在十六进制视图中显示发送的数据
	AppendHexData(dataToSend.data(), dataToSend.size(), false);
	
	CString logMsg;
	logMsg.Format(L"发送数据 (%zu字节)", dataToSend.size());
	AppendLog(logMsg);
	
	// TODO: 实际发送数据到传输层
}

